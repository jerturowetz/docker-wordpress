# editorconfig.org

root = true

[*]
# Change these settings to your own preference
indent_style = space
indent_size = 2
# We recommend you to keep these unchanged
# thought I'm pretty sure charset doesn't work yet in vscode
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{.jshintrc,*.json,*.yml}]
indent_style = space
indent_size = 2

[{*.php,*.html,*.css,*.less,*.sass,*.scss}]
indent_style = tab
indent_size = 4

[*.txt]
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
